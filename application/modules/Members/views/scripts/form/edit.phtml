	function getFormData()
	{
		var fieldObj = {};
		var filename = '';
		var filevalue = '';
		$.each($('form').serializeArray(), function(i, field) {	
			if(field.name.match(/\[\]$/))
			{
				var filearr = field.name.split('[]');
				filename = filearr[0];
				filevalue = $('#'+filename).val();
			}
			else
			{
				filename 	= 	field.name;
				filevalue 	= 	field.value;
			}			
			if(tinyMCE.get(field.name))
			{			
				fieldObj[filename] = tinyMCE.get(filename).getContent();	
			}
			else
			{
				fieldObj[field.name] = (editor && field.name == 'front_desc') ? editor.mirror.getValue() : field.value;
			}			
		});
		return fieldObj;
	}
	
